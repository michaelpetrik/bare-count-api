{
    "name": "bare-count-api",
    "version": "0.0.1",
    "description": "Minimalist but scalable self-hosted visit counter API written in TypeScript",
    "main": "dist/server.js",
    "scripts": {
        "dev": "npm run build && ts-node-dev --respawn dist/server.js",
        "build": "tsc",
        "start": "node dist/server.js",
        "start:prod": "NODE_ENV=production npm run start",
        "lint": "eslint src --ext .ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "keywords": [
        "api",
        "counter",
        "visit",
        "analytics",
        "self-hosted",
        "typescript",
        "minimal"
    ],
    "author": "Michael Petr√≠k",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/michaelpetrik/bare-count-api.git"
    },
    "dependencies": {
        "dotenv": "^17.2.0",
        "express": "^4.21.2",
        "geoip-lite": "^1.4.10",
        "ua-parser-js": "^2.0.4",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "@types/express": "^5.0.3",
        "@types/geoip-lite": "^1.4.4",
        "@types/jest": "^29.5.8",
        "@types/node": "^22.16.5",
        "@types/supertest": "^2.0.16",
        "@types/uuid": "^10.0.0",
        "jest": "^29.7.0",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.8.3"
    },
    "type": "commonjs",
    "bugs": {
        "url": "https://github.com/michaelpetrik/bare-count-api/issues"
    },
    "homepage": "https://github.com/michaelpetrik/bare-count-api#readme",
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testMatch": [
            "**/__tests__/**/*.test.ts"
        ],
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.d.ts",
            "!src/index.ts"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "text",
            "lcov",
            "html"
        ]
    }
}
